# Contributor: Guten <ywzhaifei@gmail.com>

pkgname=thebear-git
pkgver=20120129
pkgrel=1
pkgdesc="The Bear - a giant downloader - web front end to aria2"
arch=("i686" "x86_64")
url="http://sourceforge.net/p/thebear/home/Home/"
license=("unknown")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
md5sums=()

_gitroot="git://git.code.sf.net/p/thebear/code"
_gitname="thebear"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname}/.git ] ; then
    cd ${_gitname}

    # Change remote url to anongit
    if [ -z $( git branch -v | grep anongit ) ] ; then
        git remote set-url origin ${_gitroot}
    fi
    
    git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi
  msg "GIT checkout done or server timeout"
}

package() {
  mkdir -p $pkgdir/srv/http/thebear/
  cp -ar ${srcdir}/${_gitname}/* $pkgdir/srv/http/thebear/

  cd $pkgdir/srv/http/thebear
  chmod 777 -R assets protected
}


