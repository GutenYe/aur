# Contributor: Guten <ywzhaifei@gmail.com>

pkgname=user-saber-client-daemon
pkgver=0.3
pkgrel=1
pkgdesc="a saber client user daemon"
arch=("i686" "x86_64")
url="https://github.com/GutenYe/saber"
license=("MIT-LICENSE")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("rc.saber-client")

package() {
  p_root=$pkgdir/home/$USER
  cd $srcdir

  mkdir -p $p_root/etc/rc.d

  cp rc.saber-client $p_root/etc/rc.d/saber-client

  chown $USER:$USER -R $pkgdir
}

# vim:set ts=2 sw=2 et:
md5sums=('292ea232e340de2a6b19950e7557fe0f')
