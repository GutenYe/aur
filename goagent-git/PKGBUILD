pkgname=goagent-git
pkgver=20120413  # git auto added
pkgrel=1
pkgdesc="a gae proxy forked from gappproxy/wallproxy"
arch=("i686" "x86_64")
url="http://goagent.googlecode.com"
license=("GPL2")
depends=('python2' 'python2-pyopenssl')
conflicts=('goagent')
provides=('goagent')
source=("daemon.goagent")
md5sums=('94e66bb9673157bc7fcfc2e7d01be389') 
backup=('etc/goagent')

_gitroot="git://github.com/phus/goagent.git"
_gitname="goagent"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname}/.git ] ; then
    cd ${_gitname}

    # Change remote url to anongit
    if [ -z $( git branch -v | grep anongit ) ] ; then
        git remote set-url origin ${_gitroot}
    fi
    
    git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  rm -rf "$srcdir/${_gitname}-build"
  git clone "$srcdir/${_gitname}" "$srcdir/${_gitname}-build"
  
  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/${_gitname}-build"

  sed -i -re "1s/python2?/python2/" local/*.py
  #sed -i -re "1s/python2?/python2/" server/python/*.py
  chmod +x local/proxy.py
  #chmod +x server/python/*.py

  #
  # install
  #

  mkdir -p $pkgdir/opt/goagent
  cp -r * $pkgdir/opt/goagent

  mkdir -p $pkgdir/etc
  mv $pkgdir/opt/goagent/local/proxy.ini $pkgdir/etc/goagent
  ln -s $pkg/etc/goagent $pkgdir/opt/goagent/local/proxy.ini

  mkdir -p $pkgdir/etc/rc.d
  cp $startdir/daemon.goagent $pkgdir/etc/rc.d/goagent

}


