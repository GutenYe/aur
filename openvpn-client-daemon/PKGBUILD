pkgname=openvpn-client-daemon
pkgver=0.3
pkgrel=1
pkgdesc="an openvpn daemon"
arch=("i686" "x86_64")
url="http://openvpn.net"
license=("MIT-LICENSE")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=("etc/conf.d/openvpn-client")
options=()
changelog=
source=("rc.openvpn-client" "conf.openvpn-client")

package() {
  cd $srcdir

  mkdir -p $pkgdir/etc/conf.d
  mkdir -p $pkgdir/etc/rc.d

  cp rc.openvpn-client $pkgdir/etc/rc.d/openvpn-client
  cp conf.openvpn-client $pkgdir/etc/conf.d/openvpn-client
}

