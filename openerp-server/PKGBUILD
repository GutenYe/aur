# Contributor: L42y <423300@gmail.com>

pkgname=openerp-server
pkgver=6.0.2
pkgrel=1
pkgdesc="Advanced OpenSource ERP and CRM server"
url=http://openerp.com/
arch=(i686 x86_64)
license=(GPLv3)
depends=(python2 python2-psycopg2 postgresql python-reportlab python-pychart python-egenix-mx-base python2-yaml python-lxml python-pytz pydot)
optdepends=('python-imaging: for generating reports using non .jpg images' 
            'python-vobject: for iCalendar and VCards parsing')
source=("http://openerp.com/download/stable/source/${pkgname}-${pkgver}.tar.gz")
md5sums=('b6f3341f518905d51517b86d6096325f')

build()
{
  cd "$srcdir/${pkgname}-${pkgver}"
  python2 setup.py install --root="$pkgdir"
  cd "$pkgdir/usr/bin/"
  sed -i 's/cd .*pkg/cd /' openerp-server
}
