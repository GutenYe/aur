#!/bin/bash

. /etc/conf.d/saber-server
. /etc/rc.conf
. /etc/rc.d/functions

case "$1" in
  start)
    stat_busy "Starting saber server daemon"

		for USER in $USERS; do
			su -c "~/etc/rc.d/saber-server start" $USER
		done
    ;;
  stop)
    stat_busy "Stopping saber server daemon"

		for USER in $USRES; do
			su -c "~/etc/rc.d/saber-server stop" $USER
		done
		;;
	restart)
		$0 stop
		$0 start
		;;
	*)
		echo "usage: $0 {start|stop|restart}"
		;;
esac
exit 0
