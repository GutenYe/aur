# Maintainer: Guten Ye

pkgname="saber-server-daemon"
pkgver=0.1
pkgrel=2
pkgdesc="a saber server daemon"
arch=("i686" "x86_64")
url="https://github.com/GutenYe/saber"
license=("MIT")
depends=("user-saber-server-daemon")
source=("rc.saber-server" "saber-server.confd")

package() {
  cd "$srcdir"

  install -Dm755 rc.saber-server "$pkgdir/etc/rc.d/saber-server"
  install -Dm644 saber-server.confd "$pkgdir/etc/conf.d/saber-server"
}

# vim:set ts=2 sw=2 et:
md5sums=('e97283a800518218033a4705e27c9381'
         '5578e758a867849b2bb57dda2b9da49b')
