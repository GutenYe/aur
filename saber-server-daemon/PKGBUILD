license=("MIT-LICENSE")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("rc.saber-server")

package() {
  cd $srcdir

  mkdir -p $pkgdir/etc/rc.d

  cp rc.saber-server $pkgdir/etc/rc.d/saber-server
}

