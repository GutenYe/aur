pkgname="user-gnote-daemon"
pkgver=0.1
pkgrel=1
pkgdesc="a user daemon for gnote-plugin. READ https://github.com/GutenYe/user-daemon-system FIRST"
arch=("i686" "x86_64")
url="https://github.com/GutenYe/gnote-plugin"
license=("MIT-LICENSE")
groups=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
changelog=
source=("rc.gnote")
depends=()
makedepends=()

package() {
  p_root=$pkgdir/home/$USER
  cd $srcdir

	install -Dm755 rc.gnote $p_root/etc/rc.d/gnote

  chown $USER:$USER -R $pkgdir
}

# vim:set ts=2 sw=2 et:
md5sum=() # makepkg -g >> PKGBUILD
md5sums=('38b24dd52b3c8ef0b2df4bc5317a03c8')
