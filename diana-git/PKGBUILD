# Maintainer: Guten Ye
# Contributor: flu                                                                                                                                               

pkgname="diana-git"
_gitname="diana"
pkgver=20130329.57 
pkgrel=1
pkgdesc="A command line interface to the aria2 daemon "
arch=("i686" "x86_64")
url="https://github.com/baskerville/diana"
license=("unknown")
depends=("aria2" "python")
makedepends=("git")
provides=("diana")
conflicts=("diana")
source=(git://github.com/baskerville/diana)
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/$_gitname"
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-||g').$(git rev-list --count master)"
}

package() {
  cd "${srcdir}/${_gitname}"
  install -Dm755 diana "$pkgdir/usr/bin/diana"
}

# vim:set ts=2 sw=2 et:
