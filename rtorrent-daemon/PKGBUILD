# Maintainer: Guten Ye

pkgname="rtorrent-daemon"
pkgver=0.1
pkgrel=2
pkgdesc="a daemon for rtorrent"
arch=("i686" "x86_64")
url="http://libtorrent.rakshasa.no"
license=("MIT")
depends=("screen" "rtorrent")
backup=("etc/conf.d/rtorrent")
source=("rc.rtorrent"
        "conf.rtorrent")

package() {
  cd "$srcdir"

  install -Dm755 rc.rtorrent "$pkgdir/etc/rc.d/rtorrent"
  install -Dm644 conf.rtorrent "$pkgdir/etc/conf.d/rtorrent"
}

# vim:set ts=2 sw=2 et:
md5sums=('a36a391b83cfe86c408d8cf343f15d0d'
         '72f5b35b5557e44ac0b063a9c6dc5010')
