# Maintainer: Guten Ye

pkgname="irssi-daemon"
pkgver=0.1
pkgrel=2
pkgdesc="a daemon for irssi"
arch=("i686" "x86_64")
url="http://github.com/GutenYe/aur/tree/master/irssi-daemon"
license=("MIT")
depends=("screen")
backup=("etc/conf.d/irssi")
source=("rc.irssi"
        "conf.irssi")

package() {
  cd "$srcdir/$_gitname"

  install -Dm755 rc.irssi "$pkgdir/etc/rc.d/irssi"
  install -Dm644 conf.irssi "$pkgdir/etc/conf.d/irssi"
}

# vim:set ts=2 sw=2 et:
md5sums=('0e7c93c727483387132717a3d644d162'
         '72f5b35b5557e44ac0b063a9c6dc5010')
